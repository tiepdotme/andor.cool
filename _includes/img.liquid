{% capture source %}{{ site.imagehost_url }}/{{ include.date | date: "%Y" }}/{{ include.img }}{% endcapture %}

{% if include.nsfw %}
<img src="{{ source }}_sfw.jpg" class="post__image post__image--nsfw" alt="{{ include.title }}" title="{{ include.title }}" />
{% else %}
<img src="{{ source }}.jpg" class="post__image" alt="{{ include.title }}" title="{{ include.title }}" />
{% endif %}
